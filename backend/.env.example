# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=ai_interview

# Security
JWT_SECRET=your-secret-key-change-this-in-production

# OpenAI API Key (for Realtime API: STT, conversation, and TTS)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Realtime API Configuration
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17
OPENAI_REALTIME_VOICE=nova

# Latency Tracking
ENABLE_LATENCY_LOGGING=true

# Mock Services (for development/testing without API costs)
# USE_MOCK_SERVICES=true will mock OpenAI Realtime API
USE_MOCK_SERVICES=false
MOCK_OPENAI_REALTIME=false

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
