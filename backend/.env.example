# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=ai_interview

# Security
JWT_SECRET=your-secret-key-change-this-in-production

# Clerk Configuration
# Candidate/Interview Project (for interview-frontend users)
CLERK_CANDIDATE_JWKS_URL=https://your-candidate-clerk-instance.clerk.accounts.dev/.well-known/jwks.json
CLERK_CANDIDATE_ISSUER=https://your-candidate-clerk-instance.clerk.accounts.dev
CLERK_CANDIDATE_SECRET_KEY=your_clerk_candidate_secret_key_here
CLERK_CANDIDATE_API_KEY=sk_test_your_clerk_candidate_api_key_here

# Admin/Dashboard Project (for dashboard-frontend users)
CLERK_ADMIN_JWKS_URL=https://your-admin-clerk-instance.clerk.accounts.dev/.well-known/jwks.json
CLERK_ADMIN_ISSUER=https://your-admin-clerk-instance.clerk.accounts.dev
CLERK_ADMIN_SECRET_KEY=your_clerk_admin_secret_key_here
CLERK_ADMIN_API_KEY=sk_test_your_clerk_admin_api_key_here

# Authorized parties for Clerk JWT validation (comma-separated)
CLERK_AUTHORIZED_PARTIES=http://localhost:3000,http://localhost:3001

# OpenAI API Key (for Realtime API: STT, conversation, and TTS)
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI Realtime API Configuration
OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17
OPENAI_REALTIME_VOICE=nova

# Latency Tracking
ENABLE_LATENCY_LOGGING=true

# Mock Services (for development/testing without API costs)
# USE_MOCK_SERVICES=true will mock OpenAI Realtime API
USE_MOCK_SERVICES=false
MOCK_OPENAI_REALTIME=false

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# AWS S3 Configuration
S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1

# AWS SES Email Configuration
SES_REGION=us-east-1
SES_ACCESS_KEY_ID=your_ses_access_key
SES_SECRET_ACCESS_KEY=your_ses_secret_key
SES_FROM_ADDRESS=noreply@yourdomain.com

# Email Branding
COMPANY_NAME=Verita
COMPANY_LOGO_URL=https://yourdomain.com/logo.png
SUPPORT_EMAIL=support@yourdomain.com
